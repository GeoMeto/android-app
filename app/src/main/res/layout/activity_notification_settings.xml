<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.dialogs.NotificationSettingsActivity">
    <TextView
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="GLOBAL NOTIFICATIONS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/notificationOnRadioBtn"
            android:text="ON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/notificationOffRadioBtn"
            android:text="OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <TextView
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="DAILY REMINDER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/reminderOnRadioBtn"
            android:text="ON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/reminderOffRadioBtn"
            android:text="OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <Button
        android:id="@+id/saveNotificationsSettingBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:padding="10sp"
        android:text="Save settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>