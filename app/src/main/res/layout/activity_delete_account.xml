<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.dialogs.DeleteAccountSettingsActivity">

    <TextView
        android:text="DO YOU WANT TO DELETE YOUR ACCOUNT?"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/noDeleteAccountBtn"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/yesDeleteAccountBtn"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:text="Yes"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:text="YOUR ACCOUNT WILL BE PERMANENTLY DELETED AND ALL HISTORY RELATED TO IT WILL BE LOST"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>