<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="30sp">

        <LinearLayout
            android:id="@+id/resetPassSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:background="@drawable/ic_password24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13sp"
                android:text="RESET PASSWORD" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changeUsernameSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:background="@drawable/ic_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13sp"
                android:text="CHANGE USERNAME" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notificationSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:background="@drawable/ic_edit_notifications" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13sp"
                android:text="NOTIFICATION PREFERENCES" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteAccSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:background="@drawable/ic_delete_account"
                app:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13sp"
                android:text="DELETE ACCOUNT" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logOutSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:background="@drawable/ic_logout"
                app:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13sp"
                android:text="LOG OUT" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>